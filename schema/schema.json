{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Packet",
    "description": "Standard packet definition for FANTM bluetooth telemetry",
    "type": "array",
     
    "properties": {
       "name": {
          "description": "Name of the value",
          "type": "string"
       },
       "size": {
          "type": "integer",
          "description": "Size of the value in bytes",
          "minimum": 0,
          "exclusiveMinimum": true,
          "multipleOf": 2
       },
       "signed": {
          "type":"boolean"
       }
    },
     
    "required": ["name", "size"]
 }